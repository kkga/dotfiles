# APPS

# quick restart
alt + ctrl + shift - q : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"


# WINDOWS

# navigate windows and spaces
alt - j : yabai -m window --focus stack.next || yabai -m window --focus next || yabai -m window --focus first
alt - k : yabai -m window --focus stack.prev || yabai -m window --focus prev || yabai -m window --focus last

# move window
alt + shift - k : yabai -m window --warp prev
alt + shift - j : yabai -m window --warp next

# balance size of windows
alt - backspace : yabai -m space --balance

# resize windows
alt - h : yabai -m window --resize left:-60:0
alt - l : yabai -m window --resize right:60:0

# mirror tree x-axis
alt - v : yabai -m space --mirror y-axis

# toggle window fullscreen zoom
alt - f : yabai -m window --toggle zoom-fullscreen

# toggle window split type
alt - r : yabai -m window --toggle split

# float / unfloat window and center on screen
alt + shift - space : yabai -m window --toggle float;\
          yabai -m window --grid 8:8:1:1:6:6


# SPACES

# fast focus desktop
alt - n : yabai -m space  --focus next
alt - p : yabai -m space  --focus prev
alt - tab : yabai -m space --focus recent
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9

# send window to desktop and follow focus
alt + shift - tab : yabai -m window --space recent; yabai -m space --focus recent
alt + shift - n : yabai -m window --space next; yabai -m space --focus next
alt + shift - p : yabai -m window --space prev; yabai -m space --focus prev
alt + shift - 1 : yabai -m window --space  1; yabai -m space --focus 1
alt + shift - 2 : yabai -m window --space  2; yabai -m space --focus 2
alt + shift - 3 : yabai -m window --space  3; yabai -m space --focus 3
alt + shift - 4 : yabai -m window --space  4; yabai -m space --focus 4
alt + shift - 5 : yabai -m window --space  5; yabai -m space --focus 5
alt + shift - 6 : yabai.-m window --space  6; yabai -m space --focus 6
alt + shift - 7 : yabai.-m window --space  7; yabai -m space --focus 7
alt + shift - 8 : yabai.-m window --space  8; yabai -m space --focus 8
alt + shift - 9 : yabai.-m window --space  9; yabai -m space --focus 9

# change layout of desktop
alt - z : yabai -m space --layout bsp
alt - x : yabai -m space --layout float
alt - c : yabai -m space --layout stack


# DISPLAYS

# focus display
alt - 0x2B : yabai -m display --focus prev
alt - 0x2F : yabai -m display --focus next
alt + shift - 0x2B : yabai -m window --display 1; yabai -m display --focus 1
alt + shift - 0x2F : yabai -m window --display 2; yabai -m display --focus 2
# ctrl + alt - tab  : yabai -m display --focus recent
