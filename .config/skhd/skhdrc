# APPS

# quick restart
alt + ctrl + shift - q : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"


# WINDOWS

# navigate windows and spaces
alt + ctrl - j : yabai -m window --focus stack.next || yabai -m window --focus next || yabai -m window --focus first
alt + ctrl - k : yabai -m window --focus stack.prev || yabai -m window --focus prev || yabai -m window --focus last

# move window
alt + ctrl + shift - k : yabai -m window --warp prev
alt + ctrl + shift - j : yabai -m window --warp next

# balance size of windows
alt + ctrl + shift - 0 : yabai -m space --balance

# resize windows
alt + ctrl - h : yabai -m window --resize left:-60:0
alt + ctrl - l : yabai -m window --resize right:60:0

# mirror tree x-axis
alt + ctrl - v : yabai -m space --mirror y-axis

# toggle window fullscreen zoom
alt + ctrl - f : yabai -m window --toggle zoom-fullscreen

# toggle window split type
alt + ctrl - r : yabai -m window --toggle split

# float / unfloat window and center on screen
alt + ctrl + shift - space : yabai -m window --toggle float;\
          yabai -m window --grid 8:8:1:1:6:6


# SPACES

# fast focus desktop
alt + ctrl - n : yabai -m space  --focus next
alt + ctrl - p : yabai -m space  --focus prev
alt - tab : yabai -m space --focus recent
alt + ctrl - q : yabai -m space --focus 1
alt + ctrl - w : yabai -m space --focus 2
alt + ctrl - e : yabai -m space --focus 3
alt + ctrl - a : yabai -m space --focus 4
alt + ctrl - s : yabai -m space --focus 5
alt + ctrl - d : yabai -m space --focus 6

# send window to desktop and follow focus
alt + ctrl + shift - tab : yabai -m window --space recent; yabai -m space --focus recent
alt + ctrl + shift - n : yabai -m window --space next; yabai -m space --focus next
alt + ctrl + shift - p : yabai -m window --space prev; yabai -m space --focus prev
alt + ctrl + shift - q : yabai -m window --space  1; yabai -m space --focus 1
alt + ctrl + shift - w : yabai -m window --space  2; yabai -m space --focus 2
alt + ctrl + shift - e : yabai -m window --space  3; yabai -m space --focus 3
alt + ctrl + shift - a : yabai -m window --space  4; yabai -m space --focus 4
alt + ctrl + shift - s : yabai -m window --space  5; yabai -m space --focus 5
alt + ctrl + shift - d : yabai -m window --space  6; yabai -m space --focus 6

# change layout of desktop
alt + ctrl - z : yabai -m space --layout bsp
alt + ctrl - x : yabai -m space --layout float
alt + ctrl - c : yabai -m space --layout stack


# DISPLAYS

# focus display
# ctrl + alt - [ : yabai -m display --focus next
# ctrl + alt - ] : yabai -m display --focus prev
# ctrl + alt + shift -  : yabai -m window --display 1; yabai -m display --focus 1
# ctrl + alt + shift - l : yabai -m window --display 2; yabai -m display --focus 2
# ctrl + alt - tab  : yabai -m display --focus recent
