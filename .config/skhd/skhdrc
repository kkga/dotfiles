# quick restart
cmd + ctrl + shift - q : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"


# APPS

cmd + ctrl - t : kitty -d=$HOME --single-instance --listen-on=unix:/tmp/mykitty


# WINDOWS

# navigate windows and spaces
cmd + ctrl - j : yabai -m window --focus stack.next || yabai -m window --focus next || yabai -m window --focus first
cmd + ctrl - k : yabai -m window --focus stack.prev || yabai -m window --focus prev || yabai -m window --focus last

# move window
cmd + ctrl + shift - j: yabai -m window --warp next
cmd + ctrl + shift - k: yabai -m window --warp prev

# balance size of windows
cmd + ctrl + shift - backspace : yabai -m space --balance

# resize windows
cmd + ctrl - h : yabai -m window --resize left:-60:0
cmd + ctrl - l : yabai -m window --resize right:60:0

# mirror tree x-axis
cmd + ctrl  - v : yabai -m space --mirror y-axis

# toggle window fullscreen zoom
cmd + ctrl - f : yabai -m window --toggle zoom-fullscreen

# toggle window split type
cmd + ctrl - r : yabai -m window --toggle split

# float / unfloat window and center on screen
cmd + ctrl + shift - t : yabai -m window --toggle float;\
          yabai -m window --grid 8:8:1:1:6:6


# SPACES

# fast focus desktop
cmd + ctrl - n : yabai -m space  --focus next
cmd + ctrl - p : yabai -m space  --focus prev
cmd + ctrl - tab : yabai -m space --focus recent
cmd + ctrl - 1 : yabai -m space --focus 1
cmd + ctrl - 2 : yabai -m space --focus 2
cmd + ctrl - 3 : yabai -m space --focus 3
cmd + ctrl - 4 : yabai -m space --focus 4
cmd + ctrl - 5 : yabai -m space --focus 5
cmd + ctrl - 6 : yabai -m space --focus 6
cmd + ctrl - 7 : yabai -m space --focus 7
cmd + ctrl - 8 : yabai -m space --focus 8
cmd + ctrl - 9 : yabai -m space --focus 9

# send window to desktop and follow focus
cmd + ctrl + shift - tab : yabai -m window --space recent; yabai -m space --focus recent
cmd + ctrl + shift - n : yabai -m window --space next; yabai -m space --focus next
cmd + ctrl + shift - p : yabai -m window --space prev; yabai -m space --focus prev
cmd + ctrl + shift - 1 : yabai -m window --space  1; yabai -m space --focus 1
cmd + ctrl + shift - 2 : yabai -m window --space  2; yabai -m space --focus 2
cmd + ctrl + shift - 3 : yabai -m window --space  3; yabai -m space --focus 3
cmd + ctrl + shift - 4 : yabai -m window --space  4; yabai -m space --focus 4
cmd + ctrl + shift - 5 : yabai -m window --space  5; yabai -m space --focus 5
cmd + ctrl + shift - 6 : yabai.-m window --space  6; yabai -m space --focus 6
cmd + ctrl + shift - 7 : yabai.-m window --space  7; yabai -m space --focus 7
cmd + ctrl + shift - 8 : yabai.-m window --space  8; yabai -m space --focus 8
cmd + ctrl + shift - 9 : yabai.-m window --space  9; yabai -m space --focus 9

# change layout of desktop
# alt - z : yabai -m space --layout bsp
# alt - x : yabai -m space --layout float
# alt - c : yabai -m space --layout stack


# DISPLAYS

# focus display
cmd + ctrl - 0x2B : yabai -m display --focus prev
cmd + ctrl - 0x2F : yabai -m display --focus next
cmd + ctrl + shift - 0x2B : yabai -m window --display 1; yabai -m display --focus 1
cmd + ctrl + shift - 0x2F : yabai -m window --display 2; yabai -m display --focus 2
# ctrl + alt - tab  : yabai -m display --focus recent
