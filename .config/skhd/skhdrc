# APPS

# term
alt + shift - return : alacritty

# change colors
alt + ctrl - l : alacritty-colorscheme -a light.yml
alt + ctrl - d : alacritty-colorscheme -a dark.yml

# quick restart
alt + ctrl - q : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"


# WINDOWS

# navigate windows and spaces
alt - j : yabai -m window --focus stack.next || yabai -m window --focus next || yabai -m window --focus first
alt - k : yabai -m window --focus stack.prev || yabai -m window --focus prev || yabai -m window --focus last

# move window
alt + shift - k : yabai -m window --warp prev
alt + shift - j : yabai -m window --warp next

# balance size of windows
alt + shift - 0 : yabai -m space --balance

# resize windows
alt - h : yabai -m window --resize left:-60:0
alt - l : yabai -m window --resize right:60:0

# mirror tree x-axis
alt - v : yabai -m space --mirror y-axis

# toggle window fullscreen zoom
alt - f : yabai -m window --toggle zoom-fullscreen

# toggle window split type
alt - r : yabai -m window --toggle split

# float / unfloat window and center on screen
alt + shift - space : yabai -m window --toggle float;\
          yabai -m window --grid 8:8:1:1:6:6

# toggle sticky
# alt - s : yabai -m window --toggle sticky

# toggle sticky(+float), topmost, border and picture-in-picture
alt - p : yabai -m window --toggle sticky;\
          yabai -m window --toggle topmost;\
          yabai -m window --toggle pip


# SPACES

alt + ctrl - j : yabai -m space  --focus next
alt + ctrl - k : yabai -m space  --focus prev

# toggle mission control
alt + ctrl - f : yabai -m space --toggle mission-control

# fast focus desktop
alt - tab : yabai -m space --focus recent
alt - q : yabai -m space --focus 1
alt - w : yabai -m space --focus 2
alt - e : yabai -m space --focus 3
alt - a : yabai -m space --focus 4
alt - s : yabai -m space --focus 5
alt - d : yabai -m space --focus 6

# send window to desktop and follow focus
shift + alt - tab : yabai -m window --space recent; yabai -m space --focus recent
shift + alt - q : yabai -m window --space  1; yabai -m space --focus 1
shift + alt - w : yabai -m window --space  2; yabai -m space --focus 2
shift + alt - e : yabai -m window --space  3; yabai -m space --focus 3
shift + alt - a : yabai -m window --space  4; yabai -m space --focus 4
shift + alt - s : yabai -m window --space  5; yabai -m space --focus 5
shift + alt - d : yabai -m window --space  6; yabai -m space --focus 6

# change layout of desktop
alt - z : yabai -m space --layout bsp
alt - x : yabai -m space --layout float
alt - c : yabai -m space --layout stack


# DISPLAYS

# focus display
ctrl + alt - q : yabai -m display --focus 1
ctrl + alt - w : yabai -m display --focus 2
ctrl + alt + shift - q : yabai -m window --display 1; yabai -m display --focus 1
ctrl + alt + shift - w : yabai -m window --display 2; yabai -m display --focus 2
ctrl + alt - tab  : yabai -m display --focus recent

# send window to display and follow focus
ctrl + alt + shift - tab  : yabai -m window --display recent; yabai -m display --focus recent
