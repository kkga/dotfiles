# General settings -------------------------------------------------------------

# xwayland disable
default_border pixel 1
default_floating_border pixel 1

smart_borders on
smart_gaps on
hide_edge_borders --i3 smart_no_gaps
focus_wrapping yes

font pango: terminus 10
titlebar_border_thickness 0
titlebar_padding 4 0

# seat * xcursor_theme Adwaita 24
seat * hide_cursor 10000

# Variables ------------------------------------------------------------------

set $term 'footclient'
set $floatterm 'foot -a popup'
set $drun 'sway-launcher'
set $clipboard 'sway-clipmenu'

set $mod Mod4
set $left h
set $down j
set $up k
set $right l

# Outputs ------------------------------------------------------------------

output * bg #111111 solid_color

# Inputs ------------------------------------------------------------------

input "type:keyboard" {
   xkb_layout us,ru
   repeat_delay 200
   repeat_rate 30
   xkb_options grp:alt_space_toggle
}

input "1133:16495:Logitech_MX_Ergo" {
   accel_profile adaptive
   pointer_accel 0.5
   middle_emulation true
   scroll_method on_button_down
   scroll_button BTN_SIDE
   scroll_factor 1.5
}

input "1:1:AT_Translated_Set_2_keyboard" {
   xkb_options grp:alt_space_toggle,ctrl:nocaps,altwin:swap_lalt_lwin
}

input "type:touchpad" {
    dwt disabled
    tap enabled
    natural_scroll enabled
    middle_emulation disabled
    accel_profile adaptive
    drag enabled
    scroll_factor 0.5
    pointer_accel 0.25
}

