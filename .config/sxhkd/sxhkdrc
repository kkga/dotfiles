# wm independent hotkeys

XF86AudioMute
	volume.sh -t

XF86AudioRaiseVolume
	volume.sh -i 5

XF86AudioLowerVolume
	volume.sh -d 5

XF86Audio{Prev,Next}
	playerctl {previous,next}

XF86AudioPlay
	playerctl play-pause

XF86MonBrightness{Down,Up}
	brightness.sh ddcci4 {-U 5, -A 5}

shift + XF86MonBrightness{Down,Up}
	brightness.sh ddcci5 {-U 5, -A 5}

super + shift + Return
	kitty --single-instance --listen-on=unix:@mykitty

super + ctrl + l
	kitty @ --to unix:@mykitty set-colors ~/.config/kitty/envy.conf

super + ctrl + d
	kitty @ --to unix:@mykitty set-colors ~/.config/kitty/apprentice.conf

super + d
	dmenu_run -i

super + shift + d
	j4-dmenu-desktop --usage-log="tmp/j4-dmenu-desktop.log" --display-binary --dmenu="dmenu -i" --term="kitty"

super + ctrl + c
	clipmenu -i

super + Escape
	pkill -USR1 -x sxhkd

super + ctrl + BackSpace
	loginctl lock-session


super + ctrl + shift + BackSpace
	power-menu.sh
