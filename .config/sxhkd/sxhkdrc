# wm independent hotkeys

XF86AudioMute
	volume.sh -t

XF86AudioRaiseVolume
	volume.sh -i 5

XF86AudioLowerVolume
	volume.sh -d 5

XF86Audio{Prev,Next}
	playerctl {previous,next}

XF86AudioPlay
	playerctl play-pause

XF86MonBrightness{Down,Up}
	brightness.sh -d ddcci4 s {10-, +10}

shift + XF86MonBrightness{Down,Up}
	brightness.sh -d ddcci5 s {10-, +10}

super + shift + Return
	kitty -d ~

super + ctrl + l
	kitty @ --to unix:/tmp/mykitty set-colors ~/.config/kitty/paper.conf

super + ctrl + d
	kitty @ --to unix:/tmp/mykitty set-colors ~/.config/kitty/apprentice.conf

super + d
	dmenu_run -i

super + ctrl + c
	clipmenu -i

super + Escape
	pkill -USR1 -x sxhkd

super + ctrl + BackSpace
	loginctl lock-session


super + ctrl + shift + BackSpace
	power-menu.sh
