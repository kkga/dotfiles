#
# wm independent hotkeys
#

XF86AudioMute
	volume.sh toggle

XF86AudioRaiseVolume
	volume.sh 5%+

XF86AudioLowerVolume
	volume.sh 5%-

XF86Audio{Prev,Next}
	playerctl {previous,next}

XF86AudioPlay
	playerctl play-pause


# @XF86LaunchA
# 	scrot -s -e 'image_viewer $f'


XF86MonBrightness{Down,Up}
	doas ddcutil -d 1 setvcp 10 {- 25, + 25}

shift + XF86MonBrightness{Down,Up}
	doas ddcutil -d 2 setvcp 10 {- 25, + 25}


super + shift + Return
	kitty -d ~

super + ctrl + l
	kitty @ --to unix:/tmp/mykitty set-colors ~/.config/kitty/paper.conf

super + ctrl + d
	kitty @ --to unix:/tmp/mykitty set-colors ~/.config/kitty/apprentice.conf

# super + d
# 	dmenu_run -i

super + ctrl + c
	clipmenu -i

super + Escape
	pkill -USR1 -x sxhkd

super + ctrl + BackSpace
	loginctl lock-session
