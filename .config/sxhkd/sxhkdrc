#
# wm independent hotkeys
#

XF86Audio{Mute,RaiseVolume,LowerVolume}
	volume.sh {-t,-i 5,-d 5}

XF86Audio{Play,Prev,Next}
	playerctl {play-pause,previous,next}

XF86MonBrightness{Down,Up}
	brightness.sh ddcci4 {-U 5, -A 5}

shift + XF86MonBrightness{Down,Up}
	brightness.sh ddcci5 {-U 5, -A 5}

super + shift + Return
	kitty

super + shift + p
	bemenu-run

super + p
	j4-dmenu-desktop --usage-log="tmp/j4-dmenu-desktop.log" \
	--display-binary \
	--term="kitty" \
	--dmenu="bemenu"

super + g ; {c,b}
	{env CM_LAUNCHER=bemenu clipmenu,\
	firefox}

super + Escape
	pkill -USR1 -x sxhkd

super + ctrl + BackSpace
	loginctl lock-session

super + ctrl + shift + BackSpace
	power-menu.sh
