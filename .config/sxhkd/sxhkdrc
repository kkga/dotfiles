#
# wm independent hotkeys
#

XF86AudioMute
	volume.sh -t

XF86Audio{Raise,Lower}Volume
	volume.sh {-i 5,-d 5}

XF86Audio{Prev,Next}
	playerctl {previous,next}

XF86AudioPlay
	playerctl play-pause

XF86MonBrightness{Down,Up}
	brightness.sh ddcci4 {-U 5, -A 5}

shift + XF86MonBrightness{Down,Up}
	brightness.sh ddcci5 {-U 5, -A 5}

super + shift + Return
	kitty

super + ctrl + l
	kitty @ set-colors ~/.config/kitty/envy.conf

super + ctrl + d
	kitty @ set-colors ~/.config/kitty/apprentice.conf

super + shift + p
	bemenu-run

super + p
	j4-dmenu-desktop --usage-log="tmp/j4-dmenu-desktop.log" \
	--display-binary \
	--term="kitty" \
	--dmenu="bemenu"

super + g ; {c,b}
	{env CM_LAUNCHER=bemenu clipmenu,\
	firefox}

super + Escape
	pkill -USR1 -x sxhkd

super + ctrl + BackSpace
	loginctl lock-session


super + ctrl + shift + BackSpace
	power-menu.sh
