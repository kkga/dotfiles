[user]
	name = Gadzhi Kharkharov
	email = me@kkga.me
[difftool]
	prompt = false
	trustExitCode = true
[core]
	excludesfile = /Users/kkga/.gitignore
	editor = nvim
	pager = less
[alias]
	a = add
	c = commit
	co = checkout
	b = branch
	s = status
	sl = status --long
	d = diff
	l = log --oneline
[color]
	ui = auto
[status]
	short = true
[push]
	default = simple
[pull]
	rebase = false
[log]
	date = format:%Y-%m-%d %H:%M:%S %z (%A)
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[delta]
	side-by-side = false
