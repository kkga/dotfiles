[user]
	name = Gadzhi Kharkharov
	email = me@kkga.me
[credential]
	helper = /usr/lib/git-core/git-credential-libsecret
[diff]
	tool = kitty
	guitool = kitty.gui
[difftool]
	prompt = false
	trustExitCode = true
[difftool "kitty"]
	cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
	cmd = kitty kitty +kitten diff $LOCAL $REMOTE
[core]
	excludesfile = /Users/kkga/.gitignore
	editor = nvim
	pager = less
[alias]
	a = add
	c = commit
	co = checkout
	b = branch
	s = status
	sl = status --long
	d = diff
	l = log --oneline
[hub]
	protocol = ssh
[color]
	ui = auto
[status]
	short = true
[push]
	default = simple
[pull]
	rebase = false
[log]
	date = format:%Y-%m-%d %H:%M:%S %z (%A)
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
