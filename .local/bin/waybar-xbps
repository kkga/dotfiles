#!/bin/sh

sync() {
	doas xbps-install -S > /dev/null
}

check() {
	UPDATES=$(xbps-install -un | wc -l)
	LIST=$(xbps-install -un | awk '{print $1}' | sed 's/$/\\n/' | tr -d '\n')
	if [ "$UPDATES" -eq "0" ]; then
		printf '{"text": ""}\n'
	else
		printf '{"text": "%s", "tooltip": "%s"}\n' "$UPDATES" "$LIST"
	fi
}

while true; do
	sync
	check
	sleep 10m
done
