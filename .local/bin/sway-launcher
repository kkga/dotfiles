#!/bin/sh

export FZF_DEFAULT_OPTS="
	$* $FZF_DEFAULT_OPTS\
	--bind=tab:down,btab:up
	--prompt 'RUN> '\
    --preview 'file {}'\
    --preview-window right:50%:border-left"

exec j4-dmenu-desktop \
	--usage-log="$HOME/.cache/j4" \
	--no-generic \
	--display-binary \
	--use-xdg-de \
	--term="$TERMINAL" \
	--dmenu="(cat ; (stest -flx $(echo "$PATH" | tr : ' ') | sort -u)) | term-dmenu"
